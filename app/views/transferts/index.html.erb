<p id="notice"><%= notice %></p>

<h2> <%= link_to 'show_map', transferts_map_path %> </h2>

<h1>Listing Transferts</h1>

<table>
  <thead>
    <tr>
      <th>Filename</th>
      <th>Baz dot</th>
      <th>Rev dot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transferts.each do |transfert| %>
      <tr>
        <td><%= transfert.filename %></td>
        <td><%= transfert.baz_dot %></td>
        <td><%= transfert.rev_dot %></td>
        <td><%= link_to 'Show', transfert %></td>
        <td><%= link_to 'Edit', edit_transfert_path(transfert) %></td>
        <td><%= link_to 'Destroy', transfert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

